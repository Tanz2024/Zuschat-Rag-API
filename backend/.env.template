# Environment Configuration Template for ZUS Coffee AI Chatbot
# Copy this file to .env and fill in your actual values

# Database Configuration (REQUIRED)
DATABASE_URL=postgresql://username:password@host:port/database_name

# Database Pool Settings (Optional - defaults provided)
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_ECHO=false

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379/0

# Vector Store Configuration
VECTOR_STORE_PATH=./data/vector_store
PRODUCTS_DATA_PATH=./data/products.json
EMBEDDING_MODEL=all-MiniLM-L6-v2
MULTILINGUAL_EMBEDDING_MODEL=paraphrase-multilingual-MiniLM-L12-v2

# Application Configuration
MAX_CONVERSATION_HISTORY=20
SESSION_TIMEOUT_HOURS=2
DEBUG=false
LOG_LEVEL=INFO

# Production Examples:
# For managed PostgreSQL services:
# DATABASE_URL=postgresql://user:pass@host.region.provider.com:5432/dbname
# 
# For Railway: postgresql://postgres:pass@containers-us-west-xxx.railway.app:5432/railway
# For Supabase: postgresql://postgres:pass@db.xxx.supabase.co:5432/postgres
# For Heroku: postgres://user:pass@host:5432/dbname
# For AWS RDS: postgresql://user:pass@instance.region.rds.amazonaws.com:5432/dbname
